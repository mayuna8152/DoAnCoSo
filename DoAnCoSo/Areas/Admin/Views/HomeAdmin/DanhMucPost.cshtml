@model DoAnCoSo.Models.PostViewModel

@{
    ViewData["Title"] = "DanhMucPost";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>DanhMucPost</h1>
<style>
    .table td {
        max-width: 200px; /* Set the maximum width for each cell */
        white-space: nowrap; /* Prevent text from wrapping */
        overflow: hidden; /* Hide overflow text */
        text-overflow: ellipsis; /* Display ellipsis (...) for overflow text */
    }
</style>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<table class="table">
    <thead>
        <tr class="table-warning">
            <th>
                Title
            </th>
            <th>
                Date
            </th>
            <th>
                Image QR Video
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;
            string cls = "table-success"; // Không cần đặt dấu @ ở đây
        }
        @foreach (var item in Model.Posts)
        {
            i = i + 1;
            cls = "table-success";
            if (i % 2 == 0)
            {
                cls = "table-primary";
            }
            <tr class="@cls">
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImageQRVideo)
                </td>
                <td>
                    <a asp-action="DetailPost" asp-route-id="@item.IdPost">Details</a> |
                    <a asp-action="DeletePost" asp-route-id="@item.IdPost">Delete</a> 
                </td>
            </tr>
        }
    </tbody>
</table>
