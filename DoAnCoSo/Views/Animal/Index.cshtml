@model IEnumerable<DoAnCoSo.Models.Animal>

<!DOCTYPE html>
<html>

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link href='https://fonts.googleapis.com/css?family=Kanit' rel='stylesheet'>
	<link rel="stylesheet" href="mystyle.css">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>
<body>
	<section class="ClassAnimal">
		<img src="~/desgin/ClassAnimal/Background/chim.gif" alt="Background vid" class="classbg" />
		<h1 class="textclassanimalName" style="margin-top:-300px;margin-left:-1000px;">Động vật </h1>
		<h1 class="textclassanimalInfo" style="margin-left:300px;">Động vật là nhóm sinh vật trong tự nhiên bao gồm các hình thái sống đa dạng, chúng có thể được tìm thấy ở mọi môi trường sống trên Trái Đất, từ đại dương sâu tới rừng rậm, sa mạc khô cằn. Chúng đóng vai trò quan trọng trong hệ sinh thái, tham gia vào chu trình thực vật, giữ cân bằng hệ sinh thái.</h1>

		<div class="list" style="margin-top: 100px; display: flex; flex-wrap: wrap;">
            @{
                bool anyItemsFound = false;
                foreach (var animal in Model)
                {
                    anyItemsFound = true;
                    <a href="@Url.Action("Details", "Animal", new { id = animal.IdAnimal })" style="margin-left: 160px;margin-top: 60px; text-decoration: none; border-radius:20px;">
                        <img src="~/desgin/Animal/Avatar/@animal.Avatar" alt="Avatar" class="itemAvatar" style="border-radius:20px;" />
                        <h1 class="textclassanimalInfo" style="text-align:center;">@animal.Name</h1>
                    </a>
                }

                if (!anyItemsFound)
                {
                    <h1 class="textclassanimalName" style="margin-top:100px;margin-left:;">Chúng tôi rất tiếc vì con vật bạn tìm kiếm không có trong danh sách trên trang web.Nếu có thể,mong bạn hãy chia sẽ hình ảnh hoặc trải nghiêm của mình về con vật mà bạn muốn tìm thông qua kênh Community!</h1>
                    <a href="@Url.Action("Index", "Post")" class="button" style="margin-top: 50px;">
                        <span class="content">Community!</span>
                    </a>
                }
            }
		</div>
	</section>
</body>
</html>