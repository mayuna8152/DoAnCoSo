@model DoAnCoSo.Models.ClassAnimal
<!DOCTYPE html>
<html>

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link href='https://fonts.googleapis.com/css?family=Kanit' rel='stylesheet'>
	<link rel="stylesheet" href="mystyle.css">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>

<body>
	<section class="ClassAnimal">
		<img src="~/desgin/ClassAnimal/Background/@Model.BackgroundVideo" alt="Background Image" class="classbg" />
		<h1 class="textclassanimalName" style="margin-top:-300px;margin-left:-1000px;">@Model.Name </h1>
		<h1 class="textclassanimalInfo" style="margin-left:300px;">@Model.Info</h1>
		
		<div class="list" style="margin-top: 100px; display: flex; flex-wrap: wrap;">
			@foreach (var animal in Model.Animals)
			{
				<a href="@Url.Action("Details", "Animal", new { id = animal.IdAnimal })" class="itemcard" style="margin-left: 150px; text-decoration: none;">
					<img src="~/desgin/Animal/Avatar/@animal.Avatar" alt="Avatar" class="itemAvatar" />
					<h1 class="textclassanimalInfo">@animal.Name</h1>
				</a>
			}
		</div>
	</section>
	<div>
		<a asp-action="Index">Back to List</a>
	</div>
</body>

</html>